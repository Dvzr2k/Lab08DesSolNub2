<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Description</td>
            <td>Brand</td>
            <td>Image</td>

            

          </tr>
        </thead>
        <tbody>
          <% if (customers) { %> <% for(var i = 0; i < customers.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= customers[i].name %></td>
            <td><%= customers[i].price %></td>
            <td><%= customers[i].stock %></td>
            <td><%= customers[i].description %></td>
            <td><%= customers[i].brand %></td>
            <td>
              <% if (customers[i].image) { %>
              <img src="<%= customers[i].image %>" alt="Product Image" width="100">
              <% } %>
            </td>

            <td class="d-flex gap-2">
              <a href="/update/<%= customers[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/delete/<%= customers[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
 <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5  ms-3" >
      <div class="card-body">
        <form action="/add" method="POST" enctype="multipart/form-data">
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="text"
            name="price"
            placeholder="Price"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="stock"
            placeholder="Stock"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="description"
            placeholder="Description"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="brand"
            placeholder="Brand"
            class="form-control mb-2"
          />
          <input
            type="file"
            name="image"
            class="form-control-file mb-2"
          />
          

          <button type="submit" class="btn btn-info">save product</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
